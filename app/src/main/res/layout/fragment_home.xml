<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="6"
            android:gravity="center">

            <ImageView
                android:layout_width="18.5dp"
                android:layout_height="34.5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo"
                app:tint="@color/blue_500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="MobileStore"
                android:textColor="@color/blue_500"
                android:textSize="24sp" />
        </TableRow>


        <TextView
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Khám phá"
            android:textColor="@color/black_700"
            android:textSize="36sp" />

        <TextView
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Cửa hàng điện thoại di động"
            android:textColor="@color/black_500"
            android:textSize="18sp" />

<!--        <EditText-->
<!--            android:id="@+id/et_search"-->
<!--            android:layout_marginHorizontal="20dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:background="@drawable/bg_white_corner_10"-->
<!--            android:drawableLeft="@drawable/ic_search"-->
<!--            android:drawablePadding="15dp"-->
<!--            android:fontFamily="@font/roboto_regular"-->
<!--            android:hint="Bạn cần tìm gì ?"-->
<!--            android:inputType="text"-->
<!--            android:padding="15dp"-->
<!--            android:textColorHint="@color/black_500"-->
<!--            android:textSize="18sp" />-->

        <TableRow
            android:id="@+id/row_search"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white_corner_10"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_marginStart="15dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/black_500" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Bạn cần tìm gì ?"
                android:textSize="18sp"
                android:textColor="@color/black_500"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="15dp"/>

        </TableRow>

        <TableRow
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="4">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_apple" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_samsung" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_xiaomi" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_oppo" />
        </TableRow>

        <TableRow
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_nokia" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_asus" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_vivo" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_realme" />
        </TableRow>

        <RelativeLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Sản phẩm nổi bật"
                android:textColor="@color/black_700"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:text="Xem thêm"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/blue_500"
                android:textSize="16sp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/layout_item_product" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>


</ScrollView>