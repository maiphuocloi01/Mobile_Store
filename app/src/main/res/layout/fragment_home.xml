<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:scrollbars="none"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="6"
            android:gravity="center">

            <ImageView
                android:layout_width="18.5dp"
                android:layout_height="34.5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo"
                app:tint="@color/blue_500" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="MobileStore"
                android:textColor="@color/blue_500"
                android:textSize="24sp" />
        </TableRow>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Khám phá"
            android:textColor="@color/black_700"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Cửa hàng điện thoại di động"
            android:textColor="@color/black_500"
            android:textSize="18sp" />

        <!--        <EditText-->
        <!--            android:id="@+id/et_search"-->
        <!--            android:layout_marginHorizontal="20dp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="20dp"-->
        <!--            android:background="@drawable/bg_white_corner_10"-->
        <!--            android:drawableLeft="@drawable/ic_search"-->
        <!--            android:drawablePadding="15dp"-->
        <!--            android:fontFamily="@font/roboto_regular"-->
        <!--            android:hint="Bạn cần tìm gì ?"-->
        <!--            android:inputType="text"-->
        <!--            android:padding="15dp"-->
        <!--            android:textColorHint="@color/black_500"-->
        <!--            android:textSize="18sp" />-->

        <TableRow
            android:id="@+id/row_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_white_corner_10"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_search"
                app:tint="@color/black_500" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Bạn cần tìm gì ?"
                android:textColor="@color/black_500"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/bt_apple"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_apple" />

            <ImageButton
                android:id="@+id/bt_samsung"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_samsung" />

            <ImageButton
                android:id="@+id/bt_xiaomi"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_xiaomi" />

            <ImageButton
                android:id="@+id/bt_oppo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_oppo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/bt_nokia"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_nokia" />

            <ImageButton
                android:id="@+id/bt_asus"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_asus" />

            <ImageButton
                android:id="@+id/bt_vivo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_vivo" />

            <ImageButton
                android:id="@+id/bt_realme"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_realme" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Sản phẩm nổi bật"
                android:textColor="@color/black_700"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_flash"
                app:tint="@color/blue_500" />

        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/layout_item_product" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>


</ScrollView>