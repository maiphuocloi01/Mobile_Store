<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_weight="6">

            <ImageView android:layout_width="18.5dp"
                android:layout_height="34.5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logo"
                app:tint="@color/blue_500" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MobileStore"
                android:textColor="@color/blue_500"
                android:fontFamily="sans-serif-light"
                android:textSize="24sp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"/>
        </TableRow>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khám phá"
            android:textStyle="bold"
            android:textSize="36sp"
            android:textColor="@color/black_700"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cửa hàng điện thoại di động"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black_500"/>

        <EditText
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_search"
            android:textColorHint="@color/black_500"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:background="@drawable/bg_white_corner_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:hint="Bạn cần tìm gì ?"/>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_apple" />

            <ImageButton
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_samsung" />

            <ImageButton
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_xiaomi" />

            <ImageButton
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_oppo" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_nokia" />

            <ImageButton
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_asus" />

            <ImageButton
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_vivo" />

            <ImageButton
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_white_corner_10"
                android:src="@drawable/ic_realme" />
        </TableRow>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sản phẩm nổi bật"
                android:layout_alignParentStart="true"
                android:textColor="@color/black_700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem thêm"
                android:textSize="16sp"
                android:textColor="@color/blue_500"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/layout_item_product"
            app:spanCount="2"
            android:layout_height="match_parent"/>

    </LinearLayout>


</ScrollView>