<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/bg_white_corner_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Chọn ngày tháng năm"
        android:textAlignment="center"
        android:textColor="@color/black_700"
        android:textSize="24sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black_500"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Ngày 12 tháng 4 năm 2001"
        android:textColor="@color/black_700"
        android:textSize="18sp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_corner_10_border_blue"
            android:enabled="true"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:text="Huỷ bỏ"
            android:textAllCaps="false"
            android:textColor="@color/blue_500"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_confirm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_corner_10"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:stateListAnimator="@null"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/background"
            android:textSize="20sp" />

    </TableRow>

</LinearLayout>