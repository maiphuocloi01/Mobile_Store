<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/background"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Giỏ hàng"
                android:textAlignment="center"
                android:textColor="@color/black_700"
                android:textSize="22sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:background="@color/black_200" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Tất cả (3)"
                android:textColor="@color/blue_500"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/layout_item_cart" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Giá sản phẩm"
                    android:textColor="@color/black_700"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_product_cost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="0₫"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Phí vận chuyển"
                    android:textColor="@color/black_700"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_ship_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="0₫"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp" />


            </TableRow>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/black_200" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Tổng thanh toán"
                    android:textColor="@color/black_700"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_total_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="0₫"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blue_500"
                    android:textSize="18sp" />


            </TableRow>

            <Button
                android:id="@+id/bt_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_orange_corner_10"
                android:fontFamily="@font/roboto_bold"
                android:text="Thanh toán"
                android:textAllCaps="false"
                android:textColor="@color/background"
                android:padding="12dp"
                android:stateListAnimator="@null"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_empty_cart"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="40dp"
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_empty_cart" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Không có sản phẩm nào trong giỏ hàng"
                android:textColor="@color/black_700"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>


