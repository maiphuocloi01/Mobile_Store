<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/bg_white_corner_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Xác nhận huỷ đơn hàng"
        android:textAlignment="center"
        android:textColor="@color/black_700"
        android:textSize="24sp" />



    <EditText
        android:id="@+id/et_reason"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_input_selector"
        android:fontFamily="@font/roboto_regular"
        android:hint="Lý do huỷ đơn hàng"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:padding="15dp"
        android:textColorHint="@color/black_500"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:text="*Đơn hàng này sẽ bị huỷ sau khi bạn xác nhận. Bạn có muốn tiếp tục thao tác không?"
        android:textColor="@color/orange_200"
        android:textSize="18sp" />



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"

        android:weightSum="2">

        <Button
            android:id="@+id/bt_cancel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_corner_10_border_blue"
            android:enabled="true"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:text="Thoát"
            android:textAllCaps="false"
            android:textColor="@color/blue_500"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_confirm4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_corner_10"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:stateListAnimator="@null"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/background"
            android:textSize="20sp" />

    </TableRow>

</LinearLayout>