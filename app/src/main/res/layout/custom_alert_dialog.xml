<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/bg_white_corner_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Thông báo"
        android:textAlignment="center"
        android:textColor="@color/black_700"
        android:textSize="24sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black_500"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_regular"
        android:text="Bạn có muốn đăng xuất không?"
        android:textColor="@color/black_700"
        android:textSize="18sp" />



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_cancel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_corner_10_border_blue"
            android:enabled="true"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:text="Huỷ bỏ"
            android:textAllCaps="false"
            android:textColor="@color/blue_500"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_confirm3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_corner_10"
            android:fontFamily="@font/roboto_bold"
            android:padding="15dp"
            android:stateListAnimator="@null"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/background"
            android:textSize="20sp" />

    </TableRow>

</LinearLayout>